# Environment Variables for RAG Project
# Copy this file to .env and fill in your values

# Ollama Host (for remote Ollama server like Jetson)
# Default is http://localhost:11434
OLLAMA_HOST=http://192.168.178.124:11434

# OpenAI (optional - for paid high-quality embeddings/LLM)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic Claude (optional - for paid LLM)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Cohere (optional - for alternative embeddings)
COHERE_API_KEY=your-cohere-key-here

# Hugging Face (optional - for some models)
HUGGINGFACEHUB_API_TOKEN=hf_your-token-here
